<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="xml-dir-listing" basedir="." default="jar">

	<property name="src.dir" value="src"/>
	<property name="classes.dir" value="classes"/>
	<property name="bin.dir" value="bin"/>
	<property name="lib.dir" value="lib"/>
	<property name="javadoc.dir" value="docs/api"/>
	

	<target name="clean" description="Delete all generated files">
		<delete dir="${classes.dir}" failonerror="true"/>
		<delete dir="${javadoc.dir}" failonerror="true"/>
		<delete file="./lib/${ant.project.name}.jar"/>
	</target>

	<target name="compile" description="Compiles the Task" depends="clean">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}">
			<classpath>
        		<pathelement path="./lib/jakarta-regexp-1.5.jar"/>
				<pathelement path="./lib/commons-cli-1.1.jar"/>
				<pathelement path="./lib/log4j-1.2.14.jar"/>
        		<pathelement path="${java.class.path}/"/>
       		</classpath>
		</javac>	
	</target>

	<target name="jar" description="JARs the Task" depends="compile">
		
		<jar destfile="${lib.dir}/${ant.project.name}.jar">
			<fileset dir="${classes.dir}" excludes="**/JaxpSaxExample.class" />
    			
			<manifest>
				<attribute name="Main-Class" value="net.matthaynes.xml.dirlist.DirectoryListing"/>
				<attribute name="Class-Path" value=". ./jakarta-regexp-1.5.jar ./commons-cli-1.1.jar ./log4j-1.2.14.jar"/>
			</manifest>
		</jar>
	</target>
 
	<target name="use-cli" description="Use the tool from command line" depends="jar">
		<java jar="./lib/${ant.project.name}.jar" fork="true">
			<arg line="-sort directory -r -f yyyy-MM-d -o fileList.xml ."/>
       	</java>
	</target>

	<target name="use-task" description="Use the Task" depends="jar">
		<taskdef name="xml-dir-list" classname="net.matthaynes.xml.dirlist.AntFileListing"
			classpath="lib/${ant.project.name}.jar"/>
		<xml-dir-list verbose="true" srcDir="." destFile="fileList.xml"/>
	</target>
	
	<target name="generate-javadoc" description="Generates javadocs">
		
		<mkdir dir="${javadoc.dir}" />

	  	<javadoc packagenames="net.matthaynes.xml.dirlist"
	    	    destdir="${javadoc.dir}"
	           	author="true"
	           	version="true"
	           	use="true"
	           	windowtitle="XML Directory Listing API">
				
				<classpath>
					<pathelement path="./lib/jakarta-regexp-1.5.jar"/>
					<pathelement path="./lib/commons-cli-1.1.jar"/>
					<pathelement path="./lib/log4j-1.2.14.jar"/>
					<pathelement path="${java.class.path}/"/>
				</classpath>
	
				<fileset dir="${src.dir}" defaultexcludes="yes">
					<exclude name="net/matthaynes/xml/dirlist/JaxpSaxExample.java"/>
				</fileset>

			
	  	</javadoc>
	  
  	</target>

</project>
