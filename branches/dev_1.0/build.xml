<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="xml-dir-list" basedir="." default="jar">

	<property name="src.dir" value="src"/>
	<property name="classes.dir" value="classes"/>
	<property name="bin.dir" value="bin"/>
	<property name="lib.dir" value="lib"/>
	

	<target name="clean" description="Delete all generated files">
		<delete dir="${classes.dir}" failonerror="false"/>
		<delete file="${ant.project.name}.jar"/>
	</target>

	<target name="compile" description="Compiles the Task" depends="clean">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}">
			<classpath>
        		<pathelement path="${lib.dir}"/>
        		<pathelement path="${java.class.path}/"/>
       		</classpath>
		</javac>	
	</target>

	<target name="jar" description="JARs the Task" depends="compile">
		<mkdir dir="${bin.dir}"/>
		<jar destfile="${bin.dir}/${ant.project.name}.jar" basedir="${classes.dir}">
			<fileset dir="${classes.dir}" excludes="**/JaxpSaxExample.class" />
    			
    	    		<indexjars>
	    			<fileset dir="./lib"/>
    	    		</indexjars>
    	    		
			<manifest>
				<attribute name="Main-Class" value="net.matthaynes.xml.dirlist.DirectoryListing"/>
				<attribute name="Class-Path" value="../lib/jakarta-regexp-1.5.jar"/>
			</manifest>
		</jar>
	</target>

	<target name="useCLI" description="Use the tool form command line" depends="jar">
		
	</target>

	<target name="useTask" description="Use the Task" depends="jar">
		<taskdef name="xml-dir-list" classname="net.matthaynes.xml.dirlist.AntFileListing"
			classpath="bin/${ant.project.name}.jar"/>
		<xml-dir-list verbose="true" help="true"
			srcDir="." destFile="fileList.xml"/>
	</target>

</project>
